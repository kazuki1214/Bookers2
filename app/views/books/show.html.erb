<div class="flash">
  <%= flash[:updated] %>
</div>

<div class="container px-5 px-sm-0">
<div class="row">

<%= render "users/list", user: @user, new_book: @new_book %>

<div class="col-md-8 ">
  <h1>Book detail</h1>
  <table class="table">
    <tb>
      <tr>
        <td><%= link_to user_path(@book.user) do %>
        <%= attachment_image_tag @book.user, :refile_image, size:"40x40",fallback:"no_image.jpg" %><br>
        <%= @book.user.name %>
        <% end %>
        </td>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
        <% if @book.user == current_user %>
        <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-secondary" %></td>
        <td><%= link_to "Destroy", book_path(@book), class:"btn btn-secondary", method: :delete, "data-confirm" => "本当に消しますか？" %></td>
        <% end %>
      </tr>
    </tb>
  </table>
</div>
</div>
</div>
