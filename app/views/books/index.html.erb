

<div class="flash">
  <%= flash[:created] %>
</div>

<div class="container px-5 px-sm-0">
  <div id="error_explanation">
    <% if @new_book.errors.any? %>
      <h2><%= @new_book.errors.count %>errors prohibited this obj from being saved:</h2>
      <% @new_book.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    <% end %>
  </div>
  <div class="row">
  <%= render "users/list", user: @user, new_book: @new_book %>

    <div class="col-md-8  mx-sm-auto">
      <h1>Books</h1>
      <table class="table">
        <thead>
          <tr>
            <td></td>
            <td>Title</td>
            <td>Opinion</td>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |f| %>
          <tr>
            <td><%= link_to user_path(f.user) do %>
              <%= attachment_image_tag f.user,:refile_image, size:"40x40", fallback: "no_image.jpg" %>
              <% end %>
            </td>
            <td><%= link_to book_path(f) do %>
            <%= f.title %>
            <% end %></td>
            <td><%= f.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>