<div class = "flash">
  <% flash.each do |keys,value| %>
    <%= content_tag(:div,value,class:"notice notice_#{keys}") %>
  <% end %>
</div>
<div class="container px-5 px-sm-0">
<div class="row">
<%= render "users/list", user: @user,new_book: @new_book %>

<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table">
    <thead>
      <tr>
        <td></td>
        <td>Title</td>
        <td>Opinion</td>
      </tr>
    </thead>
    <tbody>
      <% @user.books.each do |f| %>
      <tr>
        <td><%= link_to user_path(@user) do %>
          <%= attachment_image_tag @user, :profile_image, size:"40x40", fallback: "no_image.jpg" %>
          <% end %>
        </td>
        <td><%= link_to book_path(f) do %>
        <%= f.title %>
        <% end %></td>
        <td><%= f.body %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
</div>
