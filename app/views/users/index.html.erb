<div class="container px-5 px-sm-0">
<div class="row">

<%= render "users/list", user: @user, new_book: @new_book %>

<div class="col-md-8">
  <h1>Users</h1>
  <table class="table">
    <thead>
      <tr>
        <td>image</td>
        <td>name</td>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |t| %>
        <tr>
          <td><%= attachment_image_tag t, :refile_image, size:"40x40", fallback:"no_image.jpg" %></td>
          <td><%= t.name %></td>
          <td><%= link_to "Show", user_path(t) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
</div>
